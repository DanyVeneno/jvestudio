---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://www.youtube.com/@JuanitoVenenoEstudio/",
    description: "yehiibhii official website",
    icon: "mdi:youtube",
  },
  {
    url: "https://github.com/DanyVeneno",
    description: "yehiibhii source on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.instagram.com/juanitovenenoestudio/",
    description: "yehiibhii on Discord",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://www.facebook.com/juanitovenenoestudiodigital/",
    description: "yehiibhii on Twitter",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.twitch.tv/juanitovenenoestudio",
    description: "yehiibhii on Twitter",
    icon: "fa-brands:twitch",
  },
  {
    url: "https://www.pinterest.com.mx/juanitoveneno/",
    description: "yehiibhii on Twitter",
    icon: "fa-brands:pinterest",
  },
  {
    url: "https://twitter.com/VenenoDigital",
    description: "yehiibhii on Twitter",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://open.spotify.com/show/02JMGEAGGkQVFqkngYb4gE?si=f0e7243f72604d13",
    description: "yehiibhii on Twitter",
    icon: "fa-brands:spotify",
  },
];
---

<!--items-center justify-center h-84 relative flex flex-row items-center-->
<footer class="lg:grids-col-3 md:grids-col-2 sm:grids-col-1 grid gap-4">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <div class="grid w-1/3">
    <ul class="relative grid grid-cols-4 gap-2 sm:grid-cols-4">
      {
        links.map((link) => (
          <li>
            <a
              class="flex h-12 w-12 items-center justify-center rounded-full border-2 border-current p-3"
              href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="h-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <div
    class="flex w-1/3 flex-col border-2 border-dashed border-lime-400 md:w-48 md:flex-row"
  >
    <!-- Begin Mailchimp Signup Form -->
    <link
      href="//cdn-images.mailchimp.com/embedcode/classic-071822.css"
      rel="stylesheet"
      type="text/css"
    />
    <style type="text/css">
      #mc_embed_signup {
        background: rgba(24, 23, 23, 0.384);
        /*clear: left;*/
        font: 14px Helvetica, Arial, sans-serif;
        width: 600px;
        color: black;
      }
      input {
        background-color: rgba(0, 0, 0, 0.336);
        color: #efefef;
      }
      /* Add your own Mailchimp form style overrides in your site stylesheet or in this style block.
	   We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
    </style>
    <div
      id="mc_embed_signup"
      class="w-full border-2 border-dashed border-sky-400 pr-0"
    >
      <form
        action="https://juanitovenenoed.us20.list-manage.com/subscribe/post?u=058575c106ee9d9772c7ebc9d&id=d78136f263&f_id=00ce4ee6f0"
        method="post"
        id="mc-embedded-subscribe-form"
        name="mc-embedded-subscribe-form"
        class="validate text-white"
        target="_blank"
        novalidate
      >
        <div id="mc_embed_signup_scroll">
          <h2>Suscribete al sistema de noticias</h2>
          <div class="indicates-required">
            <span class="asterisk">*</span>Requeridos
          </div>
          <div class="mc-field-group">
            <label for="mce-FNAME"
              >Tu Nombre <span class="asterisk">*</span>
            </label>
            <input
              type="text"
              value=""
              name="FNAME"
              class="required bg-black opacity-30"
              id="mce-FNAME"
              required
            />
            <span id="mce-FNAME-HELPERTEXT" class="helper_text"></span>
          </div>
          <div class="mc-field-group">
            <label for="mce-EMAIL"
              >Tu Correo <span class="asterisk">*</span>
            </label>
            <input
              type="email"
              value=""
              name="EMAIL"
              class="required email bg-black opacity-30"
              id="mce-EMAIL"
              required
            />
            <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
          </div>
          <div hidden="true">
            <input type="hidden" name="tags" value="3423257,3423253" />
          </div>
          <div id="mce-responses" class="clear foot">
            <div class="response" id="mce-error-response" style="display:none">
            </div>
            <div
              class="response"
              id="mce-success-response"
              style="display:none"
            >
            </div>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input
              type="text"
              name="b_058575c106ee9d9772c7ebc9d_d78136f263"
              tabindex="-1"
              value=""
            />
          </div>
          <div class="optionalParent">
            <div class="clear foot">
              <input
                type="submit"
                value="Subscribirme"
                name="subscribe"
                id="mc-embedded-subscribe"
                class="button"
                style="background: black; color:yellowgreen; .button:hover {background:#343a40}"
              />
              <p class="brandingLogo">
                <a
                  href="http://eepurl.com/iiQZPD"
                  title="Mailchimp - email marketing made easy and fun"
                  ><img
                    src="https://eep.io/mc-cdn-images/template_images/branding_logo_text_light_dtp.svg"
                  />
                </a>
              </p>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script
      type="text/javascript"
      src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
    ></script><script type="text/javascript">
      (function ($) {
        window.fnames = new Array();
        window.ftypes = new Array();
        fnames[0] = "EMAIL";
        ftypes[0] = "email";
        fnames[1] = "FNAME";
        ftypes[1] = "text";
        fnames[2] = "LNAME";
        ftypes[2] = "text";
        fnames[3] = "ADDRESS";
        ftypes[3] = "address";
        fnames[4] = "PHONE";
        ftypes[4] = "phone";
        fnames[5] = "BIRTHDAY";
        ftypes[5] = "birthday";
      })(jQuery);
      var $mcj = jQuery.noConflict(true);
    </script>
    <!--End mc_embed_signup-->
    <div class="flex w-1/3 flex-col md:flex-row">
      <ul class="relative grid grid-cols-4 gap-2 sm:grid-cols-4">
        {
          links.map((link) => (
            <li>
              <a
                class="flex h-12 w-12 items-center justify-center rounded-full border-2 border-current p-3"
                href={link.url}
              >
                <span class="sr-only">{link.description}</span>
                <Icon class="h-full" name={link.icon} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</footer>
